/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
//@import url('http://fonts.googleapis.com/css?family=Lato|Ubuntu')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #ebebeb
background-color = #faf9f0
widget-color = #fff

/* Basics
*********************************/

div, article, section, header, footer, nav, li
  position relative

group:after
  display block
  height 0
  clear both
  content "."
  visibility hidden

*
  box-sizing border-box

body
  background #f9f9f9
  font-family 'Montserrat',sans-serif
  color #323131
  margin 0
  padding 0

html, body
  height 100%
  min-height 100%

::selection
  background #ff0
  color #333

img
  width 100%
  height auto

.clearfix:after
  content ''
  display: block
  clear both


/* Grid Structure
*********************************/

.row
  width 100%
  height auto
  display block

header
  width 100%
  height 400px
  position relative
  background url('http://2013.hackference.co.uk/img/front_banner.jpg') no-repeat center center fixed 
  background-size cover

header img
  max-width 500px

.container
  max-width 1000px
  width 90%
  height auto
  margin 0 auto

.half
  width 50%
  height auto
  float left

.two-third
  width 65%
  height auto
  float left
  margin-right 2%

.third
  width 33%
  height auto
  float left
  padding 0 2em

.quarter
  width 25%
  height auto
  float left
  padding 1em

footer
  width 100%
  height auto
  background-color rgba(27, 27, 27, 0.9)
  color #f9f9f9

.sidebar
  padding 1em 0

.widget
  margin-bottom 3em


/* Positioning
*********************************/

.left
  float: left;

.right
  float right

.text-left
  text-align left

.text-right
  text-align right

.text-center
  text-align center

.fixed
  position fixed
  float left

.perfect
  width 80%
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)

.padding
  padding 1em 0


/* Speakers
*********************************/

.speaker
  list-style: none

.quarter img
  max-width 90px !important

.quarter p
  margin 0


/* Typography
*********************************/

h1
  font-size 40px

h2
  font-size 28px
  color #00a44c

p
  font-size 18px
  line-height 1.6 

a
  text-decoration none
  font-size 14px
  color #00a44c

footer p
  padding 1em 0
  font-size 12px

.sidebar h2
  color #323131


/* Form
*********************************/

label
  //display none

input
  width 100%
  height auto
  padding 1em
  background-color #e0e0e0
  border 0
  outline 0
  color #383938
  margin-bottom 1em
  font-family 'Montserrat',sans-serif

.btn
  padding 1em 1.8em
  outline none
  border none
  background #00a44c
  color #f9f9f9



/* Form
*********************************/


iframe
  width 100%
  height auto



/* Media Query
*********************************/

@media screen and (max-width: 900px)
  .two-third
    width 100%
  .third
    width 100%
    padding 0
  .widget
    width 48%
    float left
    margin-right 4%
  .widget:nth-child(2n)
    margin-right 0


@media screen and (max-width: 700px)
  .widget
    width 100%
    margin-right 0
  .quarter
    width 50%
  .quarter img
    max-width none !important

@media screen and (max-width: 380px)
  .quarter
    width 100%
    padding 0
    margin-bottom 1em

/**
GitHub Button
**/
#github
  left -65px
  height 30px
  top 40px;
  position absolute
  text-decoration none
  width 250px;
  transform rotate(-45deg)
  span
    background black
    color white
    font-size 14px
    left 0
    padding 5px 0
    position absolute
    text-align center
    width 250px
    box-shadow rgba(black, 0.2) 1px 1px 10px
    transform transition opacity 1s
    &:last-child
      background red
      opacity 0
  &:hover span
    &:first-child
      opacity 0
    $:last-child
      opacity 1
@media all and (-webkit-transform-3d)
  #github
    span
      opacity 1 !important
      backface-visibility hidden
      transition transform 1s
      &:last-child
        transform rotateX(180deg)
    &:hover span
      &:first-child
        transform: rotateX(180deg)
      &:last-child
        transform: rotateX(360deg);