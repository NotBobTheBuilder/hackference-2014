/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Lato|Ubuntu')

/*
 * Nib provides a CSS reset
 */
//global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #ebebeb
background-color = #faf9f0
widget-color = #fff

body
  font-family 'Lato'
  background-color background-color
  color #444

header
  font-family 'Ubuntu'
  padding 50px 10px
  color #fff
  font-size 25px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

  img
    width 100%

    @media screen and (min-width: 450px)
      width 50%

    @media screen and (min-width: 750px)
      width 350px

.container
  width 90%
  margin 50px auto
  overflow hidden

  @media screen and (min-width: 750px)
    width 750px


.main-content
  float left
  width 60%

  p
    margin-bottom 20px

  @media screen and (max-width: 450px)
    width 100%
    float none
    margin-bottom 20px

  ul.speakers
    li
      display inline-block
      text-align center
      width 50%
      @media screen and (min-width: 750px)
        width 33%

a
  text-decoration none
  color #4A8ACC
a:visited
  color #4A8ACC


.sidebar
  float left
  width 40% 

  @media screen and (max-width: 450px)
    width 100%
    float none

  .widget
    margin-bottom 20px
  
    form.subscribe
      display block
      label
        padding 0px 10px
        display block
        clear both
        input
          float right
          width 60%
      button.btn
        clear both
        display block
        margin 5px auto
        margin-top 18px;
        margin-bottom 15px

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    border-radius 3px
    border 1px solid #ccc
    margin-left 20px
    background-color widget-color
    box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)

    @media screen and (max-width: 450px)
      margin-left 0

    h2
      font-family 'Ubuntu'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    img
      width 90%
      display block
      margin 20px auto

    p
      font-size 13px
      padding 0px 10px
      margin-bottom 10px
      text-align center

p
  line-height 1.8

footer
  width 90%
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px

  @media screen and (min-width: 750px)
    width 750px

.btn
  display inline-block
  padding 6px 12px
  margin-bottom: 0
  font-size 14px
  font-weight normal
  line-height 1.428571429
  white-space nowrap
  vertical-align middle
  cursor pointer
  background-image none
  border 1px solid transparent
  border-radius 4px
  -webkit-user-select none
  color #ffffff
  background-color #428bca
  border-color #357ebd