/*
 * Import nib
 */
@import 'nib'

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #00a44c
background-color = #faf9f0
widget-color = #fff

/* Basics
*********************************/

div, article, section, header, footer, nav, li
  position relative

group:after
  display block
  height 0
  clear both
  content "."
  visibility hidden

*
  box-sizing border-box

body
  background #f9f9f9
  font-family 'Montserrat',sans-serif
  color #323131
  margin 0
  padding 0

html, body
  height 100%
  min-height 100%

::selection
  background #ff0
  color #333

img
  width 100%
  height auto

a
  img
    border 0

.clearfix:after
  content ''
  display block
  clear both

.clear-float
  clear both

p
  a
    font-size inherit


/* Grid Structure
*********************************/

.row
  width 100%
  height auto
  display block

header
  width 100%
  //height 400px
  position relative
  background url('/images/backgrounds/front_banner.jpg') no-repeat center center fixed 
  background-size cover
  .opacity
    background-color:rgba(0,0,0,0.7);
    height:400px;
  a img
    max-width 500px

.container
  max-width 1000px
  width 90%
  height auto
  margin 0 auto

.half
  width 50%
  height auto
  float left

.two-third
  width 65%
  height auto
  float left
  margin-right 2%

.third
  width 33%
  height auto
  float left
  padding 0 2em

.quarter
  width 25%
  height auto
  float left
  padding 1em

footer
  width 100%
  height auto
  background-color rgba(27, 27, 27, 0.9)
  color #f9f9f9

.sidebar
  padding 1em 0

.widget
  margin-bottom 3em


/* Positioning
*********************************/

.left
  float: left;

.right
  float right

.text-left
  text-align left

.text-right
  text-align right

.text-center
  text-align center

.fixed
  position fixed
  float left

.perfect
  width 80%
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)

.padding
  padding 1em 0

/* Header
*********************************/


header#Speakers
  background url('/images/backgrounds/speakers.jpg') no-repeat center center fixed 
  background-size cover

header#Tickets
  background url('/images/backgrounds/tickets.jpg') no-repeat center center fixed 
  background-size cover

header#Sponsors
  background url('/images/backgrounds/sponsors2.jpg') no-repeat center center fixed 
  background-size cover

header#Hack
